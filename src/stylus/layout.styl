  +below(breakpoint_small)
    display: block
    position: relative
    margin: 2rem auto 0
    padding-bottom: 2.5rem
    width: 96px
    height: 96px
    background: url(../images/logo.svg) no-repeat
    text-decoration: none
    
  &:before
    display: block
    content: ''
    width: 32px
    height: 29px
    position: absolute
    top: 94px
    left: 24px
    background: url(../images/arrow.svg) no-repeat
  
  &:after
    display: block
    content: 'Get it now!'
    font-family: 'Patrick Hand', cursive
    color: white
    font-size: 1.5rem
    position: absolute
    top: 108px
    left: -76px
    
    
.phone
  position: absolute
  left: 56%
  bottom: 0
  width: 277px
  height: 386px
  background: url(../images/phone.png)
  animation: fadeInUp 2s
  
  +below(breakpoint_small)
    display: none
  
  a.logo
    position: absolute
    left: 75px
    top: 136px
    width: 128px
    height: 128px
    background: url(../images/logo.svg) no-repeat
    text-decoration: none
    
    &:before
      display: block
      content: ''
      width: 32px
      height: 29px
      position: absolute
      top: 126px
      left: 92px
      background: url(../images/arrow.svg) no-repeat
    
    &:after
      display: block
      content: 'Get it now!'
      font-family: 'Patrick Hand', cursive
      color: white
      font-size: 1.5rem
      position: absolute
      top: 140px
      left: -8px

.weaker
    opacity: 0.75
    
.badges
  margin-top: 1rem
  
  a
    column(1/2)
    
    +below(breakpoint_small)
      stack()
    
    img
      opacity: 0.8
      -webkit-transition: opacity 0.3s ease-in-out;
      -moz-transition: opacity 0.3s ease-in-out;
      transition: opacity 0.3s ease-in-out;
      
      &:hover
        opacity: 1
    
  .badge_gp
    text-align: right
    
    +below(breakpoint_small)
      text-align: center
      margin-bottom: 1.25rem
    
  .badge_ws
    text-align: left
    
    +below(breakpoint_small)
      text-align: center
      
#upcoming
  display: none
  position: fixed
  left: 0
  top: 0
  width: 100%
  height: 100%
  overflow: auto
  background-color: rgba(0, 0, 0, 0.4)
  z-index: 10
  
  &:target
    display: block
    
  .dialog
    background: white
    max-width: 32rem
    width: 100%
    position: absolute
    left: 50%
    top: 50%
    -webkit-transform: translateX(-50%) translateY(-50%)
    -moz-transform: translateX(-50%) translateY(-50%)
    transform: translateX(-50%) translateY(-50%)
    padding: 2rem
    
    +below(breakpoint_small)
      padding: 1rem
      height: 100%
    
    .dialog_content_wrapper
      +below(breakpoint_small)
        padding: 0.25rem 2rem
    
    h3
      margin-bottom: 1rem
      
    h4
      font-weight: 400
      margin-bottom: 0.5rem
    
    ul
      list-style-type: circle
      margin-left: 1rem
    
    p
      padding: 0
      margin-bottom: 0.5rem
      
    a.button_close
      text-decoration: none
      font-size: 2.5rem
      position: absolute
      right: 2rem
      top: 1.5rem
      
      &:hover
        color: color_text_secondary
        
      +below(breakpoint_small)
        display: none
        
    .close_small
      display: none
      text-transform: uppercase
      text-align: center
      
      +below(breakpoint_small)
        display: block
        
      a
        color: color_primary_dark
        text-decoration: none
    
    
// CSS Animations

@keyframes kenburns {
  0% {
  	transform: scale(1.2) translateX(-40%)
    -ms-transform: scale(1.2) translateX(-40%) /* IE 9 */
    -webkit-transform: scale(1.2) translateX(-40%) /* Safari and Chrome */
    -o-transform: scale(1.2) translateX(-40%) /* Opera */
    -moz-transform: scale(1.2) translateX(-40%) /* Firefox */
  }
  80% {
  	transform: scale(1) translateX(-50%)
    -ms-transform: scale(1) translateX(-50%) /* IE 9 */
    -webkit-transform: scale(1) translateX(-50%) /* Safari and Chrome */
    -o-transform: scale(1) translateX(-50%) /* Opera */
    -moz-transform: scale(1) translateX(-50%) /* Firefox */
  }
  100% {
  	transform: scale(1.2) translateX(-40%)
    -ms-transform: scale(1.2) translateX(-40%) /* IE 9 */
    -webkit-transform: scale(1.2) translateX(-40%) /* Safari and Chrome */
    -o-transform: scale(1.2) translateX(-40%) /* Opera */
    -moz-transform: scale(1.2) translateX(-40%) /* Firefox */
  }
}


@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translate3d(0, 100%, 0);
  }

  to {
    opacity: 1;
    transform: none;
  }
}